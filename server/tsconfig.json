{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["./**/*.ts", "../src/agent-os/**/*.ts", "../src/lib/agent-tools.ts", "../src/lib/skill-loader.ts", "../src/lib/html-to-text.ts", "../skills/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
